<div id="newDiaryModal" class="modal font-yuji-syuku">
  <div class="modal-box text-custom-text2">
    <h3 class="font-bold text-lg">新しい日記を作成</h3>
    <%= turbo_frame_tag "new_diary_form" do %>
      <%= form_with(model: Diary.new, url: diaries_path, data: { turbo: false }) do |form| %>
        <div class="form-control">
          <label class="label">
            <span class="label-text">タイトル</span>
          </label>
          <%= form.text_field :diaries_title, class: 'input input-bordered', required: true %>
        </div>
        <div class="form-control mt-4">
          <label class="label">
            <span class="label-text">内容</span>
          </label>
          <%= form.text_area :diaries_content, class: 'textarea textarea-bordered', required: true %>
        </div>
        <div class="form-control mt-4">
          <label class="label">
            <span class="label-text">日時</span>
          </label>
          <%= form.datetime_local_field :start_time, class: 'input input-bordered', required: true %>
        </div>
        <div class="modal-action">
          <%= form.submit '作成', class: 'btn bg-custom-calendar text-white hover:bg-custom-calendar-hover' %>
          <label for="newDiaryModal" class="btn bg-custom-button-4 hover:bg-hover-button-4">キャンセル</label>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
