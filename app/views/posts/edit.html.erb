<%= content_for :title, "投稿編集" %>
<div class="container mx-auto p-3 font-yuji-syuku">
  <h1 class="text-3xl font-bold text-center my-8">投稿編集</h1>
  <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md overflow-hidden">
    <%= form_with(model: @post, local: true) do |form| %>
      <div class="p-6">
        <div class="mb-4">
          <%= form.label :post_content, "投稿内容", class: "block text-gray-700 font-bold mb-2" %>
          <%= form.text_area :post_content, rows: 10, class: "bg-custom-post form-textarea mt-1 block w-full" %>
        </div>
        <div class="flex justify-end space-x-4">
          <%= form.submit '更新', class: "bg-custom-post-edit hover:bg-custom-post-edit-hover text-custom-text3 rounded-lg py-2 px-4" %>
          <%= link_to 'キャンセル', history_posts_path, class: "bg-custom-button-4 hover:bg-hover-button-4 rounded-lg py-2 px-4" %>
        </div>
      </div>
    <% end %>
  </div>
</div>