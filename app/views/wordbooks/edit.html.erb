<%= content_for :title, t('.title') %>
<div class="container mx-auto p-3 font-yuji-syuku">
  <h1 class="text-3xl font-bold text-center my-8">単語帳を編集</h1>
  <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md">
    <%= form_with(model: @wordbook, local: true, class: "max-w-4xl mx-auto shadow-lg p-8 rounded-lg") do |form| %>
      <div class="p-6 mb-4">
        <%= form.label :collection, "単語帳のタイトル", class: "block text-lg font-medium text-gray-700 mb-2" %>
        <%= form.text_field :collection, class: "input input-bordered input-primary w-full" %>
      </div>
      <div class="actions text-right">
        <%= form.submit "更新", class: "btn bg-custom-wordbook-edit-button hover:bg-custom-wordbook-edit-button-hover text-custom-wordbook-edit-text mt-4" %>
      </div>
    <% end %>
  </div>
</div>
