<div class="container mx-auto mt-10">
  <h1 class="text-xl font-semibold text-center mb-6">単語帳演習: <%= @wordbook.collection %></h1>

  <% @words.each do |word| %>
    <div class="flex justify-between items-center mb-4">
      <div class="word-card bg-gray-100 p-4 rounded shadow flex-grow">
        <div class="flex justify-between items-center">
          <div class="word-term text-lg font-semibold">
            <%= word.term %>
          </div>
          <button class="show-definition bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">意味を表示</button>
          <div class="word-definition text-gray-700 hidden">
            <%= word.definition %>
          </div>
        </div>
      </div>
      <button class="hide-definition bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded hidden">隠す</button>
    </div>
  <% end %>
</div>
