<% content_for(:title, t('.title')) %>
<div class="container p-3 font-yuji-syuku">
  <h1 class="text-3xl text-center my-8">ノート一覧</h1>
  <div class="flex justify-start mb-10 gap-10">
    <%= link_to '📚', new_notebook_path, class: 'bg-custom-notebook-green hover:bg-hover-button3 text-white rounded-lg py-2 px-6 flex items-center justify-center text-3xl' %>
  </div>
  <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
    <% @notebooks.each do |notebook| %>
      <div class="p-4 bg-custom-notebook-gradient rounded-lg shadow hover:shadow-lg">
        <div class="flex justify-between items-center h-7">
          <div class="flex-grow overflow-hidden">
            <%= link_to notebook.title, notebook_path(notebook), class: "text-lg text-custom-notebook-text hover:text-custom-notebook-text-hover transition duration-200 ease-in-out whitespace-nowrap overflow-hidden text-ellipsis" %>
          </div>
          <div class="flex-shrink-0 ml-2">
            <%= link_to '編集', edit_notebook_path(notebook), class: "text-sm text-custom-notebook-edit hover:text-custom-notebook-edit-hover mr-2" %>
            <%= link_to '削除', notebook_path(notebook), method: :delete, data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' }, class: "text-sm text-custom-notebook-delete hover:text-custom-notebook-delete-hover" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

