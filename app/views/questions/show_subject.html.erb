<% content_for(:title, t('.title')) %>
<div class="font-yuji-syuku pt-16">
  <h1 class="text-3xl font-bold text-center mt-4 mb-6"><%= @subject %>の問題</h1>
  <div class="mx-auto max-w-4xl px-4">
    <% @questions.each do |question| %>
      <div class="mb-4">
        <%= link_to question.question_text, question_path(question, from: 'subject'), class: "block p-4 bg-white rounded shadow-lg hover:shadow-xl" %>
      </div>
    <% end %>
  </div>
</div>
