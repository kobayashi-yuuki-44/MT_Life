<% content_for(:title, t('.title')) %>
<div class="pt-16">
  <h1 class="text-2xl font-bold text-center mt-4 mb-6"><%= @year %>の問題</h1>
  <div class="mx-auto max-w-4xl px-4">
    <% @questions.each do |question| %>
      <div class="mb-4">
        <%= link_to question.question_text, question_path(question), class: "block p-4 bg-white rounded shadow" %>
      </div>
    <% end %>
  </div>
</div>