<% content_for(:title, t('.title')) %>
<div class="flex flex-col items-center justify-center min-h-screen space-y-4 font-yuji-syuku p-4 sm:p-6 lg:p-8">
  <h1 class="text-3xl font-bold mb-4">過去問</h1>
  <div class="w-full max-w-3xl bg-white rounded-lg shadow-lg p-6">
    <p class="text-center text-gray-600 text-lg font-semibold mb-4">問題の解き方を選んでください。</p>
    <div class="border-t border-gray-300 my-4"></div>

    <div class="flex flex-wrap justify-around mt-8 gap-4">
      <div class="flex justify-center w-full sm:w-auto">
        <%= link_to '分野', subject_questions_path, data: { turbo: false }, class: "btn bg-custom-question-button-blue text-custom-home-text-green hover:bg-custom-question-button-blue-hover text-base w-full sm:w-auto" %>
      </div>
      <div class="flex justify-center w-full sm:w-auto">
        <%= link_to '年代', year_questions_path, data: { turbo: false }, class: "btn bg-custom-question-button-blue text-custom-home-text-green hover:bg-custom-question-button-blue-hover text-base w-full sm:w-auto" %>
      </div>
      <div class="flex justify-center w-full sm:w-auto">
        <%= link_to 'ランダム', random_questions_path, class: "btn bg-custom-question-button-blue text-custom-home-text-green hover:bg-custom-question-button-blue-hover text-base w-full sm:w-auto" %>
      </div>
    </div>
  </div>
</div>

