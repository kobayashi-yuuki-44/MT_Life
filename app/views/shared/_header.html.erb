<header class="bg-custom-header-footer text-custom-color font-yuji-syuku">
  <div class="container mx-auto">
    <div class="flex justify-between items-center py-2">
      <div class="flex justify-start items-center">
        <%= link_to image_tag('logo.png', alt: 'MTLife', class: 'h-16 w-auto'), root_path %>
      </div>
      <div class="flex items-center">
      <% if logged_in? %>
        <div class="flex items-center">
          <%= link_to 'Profile', profile_path, class: 'text-sm font-medium text-gray-700 px-4 hover:text-gray-900' %>
          <%= link_to 'Logout', logout_path, data: { turbo_method: :delete, turbo_confirm: "ログアウトしますか？" }, class: 'text-sm font-medium text-gray-700 px-4 hover:text-gray-900' %>
          <% end %>
        </div>
    </div>
  </div>
</header>

