<!DOCTYPE html>
<html>
  <head>
    <title>MTLife</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=RocknRoll+One&display=swap" rel="stylesheet">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script>
      document.addEventListener("turbo:load", function() {
        console.log("turbo:load fired");
        const toggleButton = document.getElementById("toggle-memo");
        console.log("toggleButton:", toggleButton);
        const memoContent = document.getElementById("memo-content");
        console.log("memoContent:", memoContent);

        if (toggleButton && memoContent) {
          console.log("Both elements found, adding event listener");
          toggleButton.addEventListener("click", function() {
            console.log("Button clicked.");
            memoContent.style.display = memoContent.style.display === "none" ? "block" : "none";
            toggleButton.textContent = memoContent.style.display === "block" ? "メモを隠す" : "メモを見る";
          });
        } else {
          console.log("Could not find the toggle button and/or memo content");
        }
      });
    </script>
  </head>

  <body class="flex flex-col min-h-screen">
    <%= render 'shared/header' %>
    <main class="flex-grow">
      <%= render 'shared/flash_message' %>
      <%= yield %>
    </main>
    <%= render 'shared/footer' %>
  </body>
</html>
