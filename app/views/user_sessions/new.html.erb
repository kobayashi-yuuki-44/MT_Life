<%= content_for :title, t('defaults.user_login') %>
<div class="font-yuji-syuku">
  <h1><%= t('defaults.user_login') %></h1>

  <%= form_with url: login_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :email, User.human_attribute_name(:email) %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password, User.human_attribute_name(:password) %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit t('defaults.user_login'), class: "bg-custom-button-2 hover:bg-hover-button-2 text-custom-text btn text-xl" %>
    </div>
  <% end %>
  <%= link_to 'Googleログイン', auth_at_provider_path(provider: :google), method: :get, data: { turbo: false }, class: 'bg-custom-button-2 hover:bg-hover-button-2 text-custom-text btn text-xl' %>
  <%= link_to 'LINEログイン', auth_at_provider_path(provider: :line), class: 'bg-custom-button-2 hover:bg-hover-button-2 text-custom-text btn text-xl' %>
  <%= link_to t('.password_forget'), new_password_reset_path, class: 'bg-custom-button-2 hover:bg-hover-button-2 text-custom-text btn text-xl' %>
</div>
