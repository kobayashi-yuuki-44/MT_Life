<%= content_for :title, t('.title') %>
<div class="container mx-auto mt-10">
  <h1 class="text-2xl font-bold text-center mb-8"><%= @wordbook.collection %>の単語一覧</h1>

  <div class="flex justify-end mb-6 gap-4">
    <%= link_to '新しい単語を作成する', new_wordbook_word_path(@wordbook), class: 'btn btn-primary' %>
    <%= link_to '単語演習スタート', card_wordbook_path(@wordbook), class: 'btn btn-success' %>
  </div>

  <% if @words.empty? %>
    <div class="text-center mt-10">
      <p class="text-lg">単語帳がまだ作成されていません。</p>
    </div>
  <% else %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @words.each do |word| %>
        <div class="bg-base-100 shadow-xl rounded-lg p-6">
          <h2 class="text-xl font-semibold mb-2"><%= word.term %></h2>
          <p class="text-gray-600 mb-4"><%= word.definition %></p>
          <div class="flex justify-end gap-2">
            <%= link_to '編集', edit_wordbook_word_path(@wordbook, word), class: "btn btn-primary" %>
            <%= link_to '削除', wordbook_word_path(@wordbook, word), method: :delete, data: { turbo_method: :delete, turbo_confirm: "この単語を削除してもよろしいですか？" }, class: "btn btn-error" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>