<%= content_for :title, t('.title') %>
<div class="container mx-auto mt-20 mb-20 font-yuji-syuku">
  <h1 class="text-3xl font-bold text-center mb-6 p-3"><%= @wordbook.collection %>の単語一覧</h1>

  <div class="flex justify-end mb-10 gap-10">
    <%= link_to '新しい単語を作成する', new_wordbook_word_path(@wordbook), class: 'bg-custom-wordbook-card-hide-button btn hover:bg-custom-wordbook-card-hide-button-hover text-custom-memo-text' %>
    <%= link_to '単語演習スタート', card_wordbook_path(@wordbook), class: 'bg-custom-wordbook-card-button btn hover:bg-custom-wordbook-card-button-hover text-custom-memo-text' %>
  </div>

  <% if @words.empty? %>
    <div class="text-center mt-10">
      <p class="text-lg">単語帳がまだ作成されていません。</p>
    </div>
  <% else %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-2">
      <% @words.each do |word| %>
        <div class="bg-base-100 shadow-xl rounded-lg p-6">
          <h2 class="text-xl font-semibold mb-2"><%= word.term %></h2>
          <p class="text-custom-word-text mb-4"><%= word.definition %></p>
          <div class="flex justify-end gap-2">
            <%= link_to '編集', edit_wordbook_word_path(@wordbook, word), class: "btn bg-custom-wordbook-edit-button hover:bg-custom-wordbook-edit-button-hover text-custom-wordbook-edit-text mt-4" %>
            <%= link_to '削除', wordbook_word_path(@wordbook, word), method: :delete, data: { turbo_method: :delete, turbo_confirm: "この単語を削除してもよろしいですか？" }, class: "btn bg-custom-wordbook-delete-button hover:bg-custom-wordbook-delete-button-hover text-custom-wordbook-delete-text mt-4" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
